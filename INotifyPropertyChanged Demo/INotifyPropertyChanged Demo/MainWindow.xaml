<Window x:Class="INotifyPropertyChanged_Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:INotifyPropertyChanged_Demo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Label Content="Number 1"/>
        <TextBox Width="80" Height="40" Text="{Binding Path=Num1, Mode=TwoWay}"/>
        <Label Content="Number 2" />
        <TextBox Width="80" Height="40" Text="{Binding Path=Num2, Mode=TwoWay}"/>
        <Label Content="Result of Multiplication"/>
        <TextBox Width="80" Height="40" Text="{Binding Path=Result, Mode=TwoWay}"/>
    </StackPanel>
</Window>
